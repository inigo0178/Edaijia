<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" 
    android:background="@color/whit">
    <TextView        
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:id="@+id/err_tv1"
        />
	<Button 
	    android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/err_tv1"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:layout_height="45dp"
	    android:background="@drawable/error_calls"
	    android:id="@+id/er_bt"
	    />
	<Button 
	    android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/er_bt"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:layout_height="45dp"
	    android:background="@drawable/relocations"
	    android:id="@+id/new_bt"
	    />
	<TextView 
	    android:id="@+id/tips_error_net"
	    android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/new_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_note"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
	    />
</RelativeLayout>